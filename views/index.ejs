<%- include nav.ejs %>
    <div class="container">
        <div class='col-md-8 offset-md-2 mt-3 mb-5'>
            <h6 class="text-center">Can't find the song you're looking for? What about creating it yourself?</h6>
            <a href="guitar-chords/add-song" id="make-song" type="button" class="btn btn-success d-block mx-auto"><h5>Make Song!</h5></a>
        </div>
        <div class='row'>    
            <div class='col-md-12'>
                <h4 class='text-center mt-2'>Choose your favorite artist</h4>
                <ul id="page-results" class="list-group">
                    <% data.forEach(function(item){ %>
                        <li class="list-group-item artist-item"><a href="/guitar-chords/<%- item.link %>"><%= item.artist %></a><span><%= item.nOfSongs %> songs</span></li>
                    <% }) %>
                </ul>
                <nav id="pag-nav" class="mt-3" aria-label="Page navigation example">
                    <ul class="pagination justify-content-center">
                        <% for(let i = 1; i <= numOfPages; i++) {%>
                            <li class="page-item"><a class="page-link" href="#"><%= i %></a></li>
                        <% }%>
                    </ul>
                </nav>
            </div>
        </div>
    </div>
<%- include footer.ejs %>