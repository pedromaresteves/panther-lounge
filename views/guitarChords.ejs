<%- include nav.ejs %>
    <div class="container">
        <h1 class='text-center mt-3 mb-5'>Check the chords of your favorite artists</h1>
        <div class='row'>    
            <div class='col-md-8'>
                <h4 class='text-center mt-2'>Choose your favorite artist</h4>
                <ul class="list-group">
                    <% data.forEach(function(item){ %>
                    
                        <li class="list-group-item artist-item"><a href="/guitar-chords/<%- item.link %>"><%= item.artist %></a><span><%= item.nOfSongs %> songs</span></li>
                    <% }) %>
                </ul>
            </div>
            <div class='col-md-4'>
                <h4 class='text-center mt-2'>The Panther Recomends</h4>
                <ul class="list-group">
                    <p>recommended list</p>
                </ul>
            </div>
            <div class='col-md-8 offset-md-2 mt-5 '>
                    <h5 class="text-center">Can't find the song you're looking for? What about creating it yourself?</h5>
                   <a href="guitar-chords/add-song" id="make-song" type="button" class="btn btn-success d-block mx-auto"><h5>Make Song!</h5></a>
            </div>
        </div>
    </div>
<%- include footer.ejs %>