<%- include nav.ejs %>
    <div class="container">
        <h1 class='text-center mb-5'><%= artist %></h1>
        <div class='row'>    
            <div id="available-songs" class='col-md-8'>
                <h4 class='text-center mt-2'>Available Songs</h4>
                <ul class="list-group">
                    <% for(let i = 0; i< data.length; i++){ %>
                            <li class="list-group-item artist-item"><a href="<%= artistParam %>/<%= data[i].link %>"><%= data[i].title %></a><span><a href="edit-song/<%= artistParam %>/<%= data[i].link %>" class="mr-3">Edit</a><a href="/" data-toggle="modal" data-target="#modal-<%= i %>">Delete</a></span></li>
                                <div class="modal fade" id="modal-<%= i %>" tabindex="-1" role="dialog" aria-labelledby="<%=data[i].link%>-label" aria-hidden="true">
                                <div class="modal-dialog" role="document">
                                    <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="<%=data[i].link%>-label">Delete Song Warning</h5>
                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                        </button>
                                    </div>
                                    <div class="modal-body">
                                        Are you sure you want to delete this song?
                                    </div>
                                    <div class="modal-footer">
                                        <a id="closeDialog" href="/" data-dismiss="modal">Close</a>
                                        <a class="delete-song" data-dismiss="modal" href="<%= artistParam %>/<%= data[i].link %>">Delete Song</a>
                                    </div>
                                    </div>
                                </div>
                                </div>
                    <%  } %>  
                </ul>
            </div>
            <div class='col-md-4'>
                <h4 class='text-center mt-2'>The Panther Recomends</h4>
                <ul class="list-group">
                        <% for(var item in recommended){ %>
                            <li class="list-group-item artist-item"><%= recommended[item] %></li>
                        <% } %>
                    </ul>
            </div>
        </div>
    </div>
<%- include footer.ejs %>